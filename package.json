{
  "name": "code-completer",
  "displayName": "Codex-AI",
  "icon": "media/ai.png",
  "publisher": "MohammedAbdulRaffay",
  "description": "An AI code completion assistant powered by Gemini. Offers real-time ghost text suggestions in all languages — just press Tab to accept. 100% free, no hidden costs — simply plug in your Gemini API key and start coding smarter.",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/raffay69/CodexAI.git"
  },
  "galleryBanner": {
  "theme": "dark",
  "color": "#4d351e"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codeCompleterView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeCompleterSidebar",
          "title": "CodexAI",
          "icon": "media/ai.png"
        }
      ]
    },
    "views": {
      "codeCompleterSidebar": [
        {
          "id": "codeCompleterView",
          "name": "",
          "type": "webview"
        }
      ]
    },
    "contributes": {
      "keybindings": [
        {
          "command": "extension.requestNewSuggestion",
          "key": "ctrl+m",
          "when": "editorTextFocus",
          "linux": true,
          "win": true
        },
        {
          "command": "extension.requestNewSuggestion",
          "key": "cmd+m",
          "when": "editorTextFocus",
          "mac": true
        }
        ]
      },
    "commands": [
      {
        "command": "code-completer.code-completer",
        "title": "CodexAI"
      }
    ],
    "activationEvents": [
      "onCommand:code-completer.code-completer"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.22.0"
  }
}
